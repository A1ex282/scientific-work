{$R *.dfm}

procedure TForm3.Button1Click(Sender: TObject); {Печать ответа}
begin
memo1.Clear;
Memo1.Text:= memo1.text+'Вы набрали '+FloatToStr(t)+' баллов из 31 бала';
end;

procedure TForm3.Edit1Change(Sender: TObject); {2 вопрос,1 ответ}
var S: real;
K: real;
begin
  S:=StrToInt(Edit1.Text);
  K:=3;
  if S=K then
  begin
    t:=t+1;
  end;
    if S<>K then
  begin
  t:=t+0;
  end;
end;

