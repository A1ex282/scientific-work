If RadioGroup3.ItemIndex = 1 then  t:=t+0;
If RadioGroup3.ItemIndex = 2 then  t:=t+0;
If RadioGroup3.ItemIndex = 3 then  t:=t+0;
end;

procedure TForm3.RadioGroup4Click(Sender: TObject);  {5 вопрос}
begin
If RadioGroup4.ItemIndex = 0 then  t:=t+0;
If RadioGroup4.ItemIndex = 1 then  t:=t+0;
If RadioGroup4.ItemIndex = 2 then  t:=t+0;
If RadioGroup4.ItemIndex = 3 then  t:=t+1;
end;

procedure TForm3.CheckBox21Click(Sender: TObject);  {7 вопрос,1 ответ}
begin
if checkbox21.Checked = true then
   if checkbox22.Checked = true then
    begin
      t:=t-1;
    end
    else
     if checkbox22.Checked = true then
   if checkbox21.Checked = true then
    begin
      t:=t-1;
    end
end;

procedure TForm3.CheckBox22Click(Sender: TObject);  {7 вопрос,2 ответ}
begin
if checkbox22.Checked = true  then
  begin
    t:=t+4;
  end
  else
    t:=t+0;
end;


